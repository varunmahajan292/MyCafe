<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/muffin"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <TextView
            android:id="@+id/itemname"
            android:layout_width="wrap_content"
            android:text="BlueBerry Muffin"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/img"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="1dp"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/items"
            android:layout_width="wrap_content"
            android:text="Number of items:"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/img"
            android:layout_below="@+id/itemname"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="1dp"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/count"
            android:layout_below="@+id/itemname"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="1dp"
            android:text="0"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:layout_toRightOf="@+id/items"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>
        <TextView
            android:id="@+id/itemscount"
            android:layout_width="wrap_content"
            android:text="Total items order:"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/img"
            android:layout_below="@+id/items"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="1dp"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/itemorder"
            android:layout_below="@+id/items"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="1dp"
            android:text="0"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:layout_toRightOf="@+id/items"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>
        <TextView
            android:id="@+id/amounttext"
            android:layout_width="wrap_content"
            android:text="Total Amount:"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/img"
            android:layout_below="@+id/itemscount"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="1dp"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/amount"
            android:layout_below="@+id/itemscount"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="1dp"
            android:text="0"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:layout_toRightOf="@+id/items"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>
        <TextView
            android:text="faltu"
            android:id="@+id/faltu"
            android:layout_toRightOf="@+id/cost"
            android:layout_below="@+id/img"
            android:layout_marginLeft="10dp"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_below="@+id/amounttext"
            android:layout_marginTop="5dp"
            android:layout_height="1dp"
            android:background="@color/colorgrey"
            android:layout_marginBottom="5dp"/>
    </RelativeLayout>

</LinearLayout>